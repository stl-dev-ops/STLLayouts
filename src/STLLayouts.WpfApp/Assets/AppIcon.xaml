<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Simple in-app vector icon (used in custom title bars). -->
    <DrawingImage x:Key="AppIconImage">
        <DrawingImage.Drawing>
            <DrawingGroup>
                <GeometryDrawing Brush="{DynamicResource AppAccentBrush}"
                                 Geometry="M4,4 L20,4 20,20 4,20 Z" />
                <GeometryDrawing Brush="{DynamicResource AppBackgroundBrush}"
                                 Geometry="M7,7 L17,7 17,17 7,17 Z" />
                <GeometryDrawing Brush="{DynamicResource AppAccentBrush}"
                                 Geometry="M9,10 L15,10 15,12 9,12 Z" />
                <GeometryDrawing Brush="{DynamicResource AppAccentBrush}"
                                 Geometry="M9,13 L15,13 15,15 9,15 Z" />
            </DrawingGroup>
        </DrawingImage.Drawing>
    </DrawingImage>

</ResourceDictionary>
