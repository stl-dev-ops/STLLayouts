<UserControl x:Class="STLLayouts.WpfApp.Views.DocumentPreviewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation">
    <Grid x:Name="RootGrid" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Generated Documents" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- Documents List -->
        <telerik:RadGridView Grid.Row="1" ItemsSource="{Binding GeneratedDocuments}" SelectedItem="{Binding SelectedDocument}"
                             AutoGenerateColumns="False" IsReadOnly="True" ShowGroupPanel="False">
            <telerik:RadGridView.Columns>
                <telerik:GridViewDataColumn Header="File Name" DataMemberBinding="{Binding FileName}" Width="*"/>
                <telerik:GridViewDataColumn Header="Size (KB)" DataMemberBinding="{Binding FileSizeBytes}" Width="100"/>
                <telerik:GridViewDataColumn Header="Duration (ms)" DataMemberBinding="{Binding GenerationDuration.TotalMilliseconds}" Width="120"/>
            </telerik:RadGridView.Columns>
        </telerik:RadGridView>

        <!-- Separator -->
        <Separator Grid.Row="2" Margin="0,10,0,10"/>

        <!-- Variables -->
        <TextBlock Grid.Row="2" Text="Populated Variables" FontWeight="Bold"/>
        
        <telerik:RadGridView Grid.Row="3" ItemsSource="{Binding PopulatedVariables}"
                             AutoGenerateColumns="False" IsReadOnly="True" ShowGroupPanel="False">
            <telerik:RadGridView.Columns>
                <telerik:GridViewDataColumn Header="Variable Name" DataMemberBinding="{Binding Key}" Width="200"/>
                <telerik:GridViewDataColumn Header="Value" DataMemberBinding="{Binding Value}" Width="*"/>
            </telerik:RadGridView.Columns>
        </telerik:RadGridView>

        <!-- Status and Buttons -->
        <Grid Grid.Row="4" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" Foreground="Gray" VerticalAlignment="Center"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <telerik:RadButton Content="Open" Command="{Binding OpenDocumentCommand}" 
                                   Padding="15,8" Margin="0,0,10,0"/>
                <telerik:RadButton Content="Copy Path" Command="{Binding CopyPathCommand}" 
                                   Padding="15,8" Margin="0,0,10,0"/>
                <telerik:RadButton Content="Export Metadata" Command="{Binding ExportMetadataCommand}" 
                                   Padding="15,8" Margin="0,0,10,0"/>
                <telerik:RadButton Content="Close" Width="80" Padding="15,8"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
