<UserControl x:Class="STLLayouts.WpfApp.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation">
    <ScrollViewer x:Name="RootScrollViewer" Margin="10">
        <StackPanel>
            <!-- Header -->
            <TextBlock Text="Application Settings" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

            <!-- Output Path -->
            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Output Path:" VerticalAlignment="Center"/>
                <telerik:RadWatermarkTextBox Grid.Column="1" Text="{Binding OutputPath}" IsReadOnly="True" Height="32" Margin="10,0,0,0"/>
                <telerik:RadButton Grid.Column="2" Content="Browse" Command="{Binding BrowseOutputPathCommand}" 
                                   Margin="10,0,0,0" Height="32"/>
            </Grid>

            <!-- Template Path -->
            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Template Path:" VerticalAlignment="Center"/>
                <telerik:RadWatermarkTextBox Grid.Column="1" Text="{Binding TemplatePath}" IsReadOnly="True" Height="32" Margin="10,0,0,0"/>
                <telerik:RadButton Grid.Column="2" Content="Browse" Command="{Binding BrowseTemplatePathCommand}" 
                                   Margin="10,0,0,0" Height="32"/>
            </Grid>

            <!-- Separator -->
            <Separator Margin="0,10,0,10"/>

            <!-- Document Options -->
            <TextBlock Text="Document Generation Options" FontWeight="Bold" Margin="0,0,0,10"/>

            <!-- some Telerik packages/versions do not ship RadCheckBox; use RadToggleButton instead -->
            <telerik:RadToggleButton Content="Convert to PDF" IsChecked="{Binding ConvertToPdf}" Margin="0,0,0,10"/>
            <telerik:RadToggleButton Content="Preserve Formatting" IsChecked="{Binding PreserveFormatting}" Margin="0,0,0,10"/>
            <telerik:RadToggleButton Content="Fail on Missing Variable" IsChecked="{Binding FailOnMissingVariable}" Margin="0,0,0,10"/>

            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Missing Variable Placeholder:" VerticalAlignment="Center"/>
                <telerik:RadWatermarkTextBox Grid.Column="1" Text="{Binding MissingVariablePlaceholder}" Height="32" Margin="10,0,0,0"/>
            </Grid>

            <!-- Logging -->
            <TextBlock Text="Logging" FontWeight="Bold" Margin="0,0,0,10"/>

            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Log Level:" VerticalAlignment="Center"/>
                <telerik:RadComboBox Grid.Column="1" ItemsSource="{Binding LogLevels}" SelectedIndex="{Binding LogLevel}" 
                                     Height="32" Margin="10,0,0,0"/>
            </Grid>

            <!-- General Options -->
            <TextBlock Text="General Options" FontWeight="Bold" Margin="0,0,0,10"/>

            <telerik:RadToggleButton Content="Auto-load Templates on Startup" IsChecked="{Binding AutoLoadTemplates}" Margin="0,0,0,20"/>

            <!-- Status -->
            <TextBlock Text="{Binding StatusMessage}" Foreground="Gray" Margin="0,0,0,20"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <telerik:RadButton Content="Save" Command="{Binding SaveSettingsCommand}" 
                                   Padding="20,10" Margin="0,0,10,0"/>
                <telerik:RadButton Content="Reset" Command="{Binding ResetSettingsCommand}" 
                                   Padding="20,10" Margin="0,0,10,0"/>
                <telerik:RadButton Content="Close" Width="80" Padding="20,10"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
