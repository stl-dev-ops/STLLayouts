<UserControl x:Class="STLLayouts.WpfApp.Views.VariableMapView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             Loaded="UserControl_Loaded"
             IsVisibleChanged="UserControl_IsVisibleChanged">

    <Grid x:Name="RootGrid" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Variable Mappings"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <!-- Filter -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <telerik:RadComboBox ItemsSource="{Binding Categories}"
                                 SelectedItem="{Binding SelectedCategory}"
                                 SelectedIndex="0"
                                 Height="32"
                                 Width="200"/>
        </Grid>

        <!-- Status -->
        <TextBlock Grid.Row="2" Text="{Binding StatusMessage}" Foreground="Gray" Margin="0,0,0,10"/>

        <!-- Mappings List -->
        <telerik:RadGridView Grid.Row="3"
                             ItemsSource="{Binding VariableMappings}"
                             SelectedItem="{Binding SelectedMapping}"
                             AutoGenerateColumns="False"
                             IsReadOnly="False"
                             ShowGroupPanel="False"
                             HorizontalAlignment="Stretch"
                             CellEditEnded="RadGridView_CellEditEnded">
            <telerik:RadGridView.Columns>
                <telerik:GridViewDataColumn Header="Variable Name" DataMemberBinding="{Binding VariableName}" Width="200" IsReadOnly="True"/>
                <telerik:GridViewDataColumn Header="Database Field" DataMemberBinding="{Binding DatabaseField}" Width="*" IsReadOnly="True"/>
                <telerik:GridViewDataColumn Header="Data Type" DataMemberBinding="{Binding DataType}" Width="120" IsReadOnly="True"/>
                <telerik:GridViewDataColumn Header="Category" DataMemberBinding="{Binding Category}" Width="140" IsReadOnly="True"/>

                <telerik:GridViewDataColumn Header="Required" Width="120" IsReadOnly="False">
                    <telerik:GridViewDataColumn.CellTemplate>
                        <DataTemplate>
                            <telerik:RadToggleButton Content=""
                                                     Style="{StaticResource AppToggleSwitchStyle}"
                                                     IsChecked="{Binding IsRequired}"
                                                     IsHitTestVisible="False"
                                                     Focusable="False"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center" />
                        </DataTemplate>
                    </telerik:GridViewDataColumn.CellTemplate>
                    <telerik:GridViewDataColumn.CellEditTemplate>
                        <DataTemplate>
                            <telerik:RadToggleButton Content=""
                                                     Style="{StaticResource AppToggleSwitchStyle}"
                                                     IsChecked="{Binding IsRequired, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center" />
                        </DataTemplate>
                    </telerik:GridViewDataColumn.CellEditTemplate>
                </telerik:GridViewDataColumn>
            </telerik:RadGridView.Columns>
        </telerik:RadGridView>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <telerik:RadButton Content="Create Variable" Command="{Binding CreateVariableCommand}" Padding="15,8" Margin="0,0,10,0"/>
            <telerik:RadButton Content="Edit Variable" Command="{Binding EditVariableCommand}" Padding="15,8" Margin="0,0,10,0"/>
            <telerik:RadButton Content="Load Mappings" Command="{Binding LoadMappingsCommand}" Padding="15,8" Margin="0,0,10,0"/>
            <telerik:RadButton Content="Save" Command="{Binding SaveMappingCommand}" Padding="15,8" Margin="0,0,10,0"/>
            <telerik:RadButton Content="Delete" Command="{Binding DeleteMappingCommand}" Padding="15,8" Margin="0,0,10,0"/>
            <telerik:RadButton Content="Close" Width="80" Padding="15,8"/>
        </StackPanel>
    </Grid>
</UserControl>
