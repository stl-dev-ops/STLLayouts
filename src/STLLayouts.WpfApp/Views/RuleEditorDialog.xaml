<Window x:Class="STLLayouts.WpfApp.Views.RuleEditorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Rule" Height="500" Width="800" WindowStartupLocation="CenterOwner" Background="White">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Existing Rules Panel -->
        <Border Grid.Row="0" Grid.RowSpan="3" Grid.Column="0" BorderBrush="#CCCCCC" BorderThickness="0,0,1,0" Padding="8" Margin="0,0,10,0" Background="#FAFAFA">
            <StackPanel>
                <TextBlock Text="Existing Rules" FontWeight="Bold" Margin="0,0,0,8"/>
                <ListBox ItemsSource="{Binding ExistingRules}" SelectedItem="{Binding SelectedRule}" Height="330" BorderBrush="#CCCCCC" BorderThickness="1" ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="4">
                                <TextBlock Text="{Binding RuleName}" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding Condition}" FontSize="10" Foreground="#555" TextTrimming="CharacterEllipsis"/>
                                <TextBlock Text="{Binding Priority, StringFormat=Priority: {0}}" FontSize="10" Foreground="#777"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <StackPanel Orientation="Horizontal" Margin="0,8,0,0" HorizontalAlignment="Right">
                    <Button Content="Refresh" Command="{Binding RefreshRulesCommand}" Width="80" Height="28" Margin="0,0,8,0"/>
                    <Button Content="Delete" Command="{Binding DeleteRuleCommand}" Width="70" Height="28" Margin="0,0,8,0"/>
                    <Button Content="New" Command="{Binding NewRuleCommand}" Width="60" Height="28"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Rule Info Row -->
        <Border Grid.Row="0" Grid.Column="1" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1" Margin="0,0,0,10" Padding="0,0,0,10">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Rule Name:" VerticalAlignment="Center" Width="100" FontWeight="Bold"/>
                    <TextBox Text="{Binding RuleName}" Width="250" Padding="5" Height="28"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Priority:" VerticalAlignment="Center" Width="100" FontWeight="Bold"/>
                    <TextBox Text="{Binding Priority}" Width="60" Padding="5" Height="28"/>
                    <CheckBox Content="Active" IsChecked="{Binding IsActive}" Margin="20,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Conditions Area -->
        <StackPanel Grid.Row="1" Grid.Column="1">
            <TextBlock Text="Conditions:" FontWeight="Bold" Margin="0,0,0,10" FontSize="12"/>
            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="220" Margin="0,0,0,10">
                <ItemsControl ItemsSource="{Binding Conditions}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,0,0,8" Background="#F5F5F5" Padding="5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="90"/>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="90"/>
                                    </Grid.ColumnDefinitions>
                                    <ComboBox Grid.Column="0" ItemsSource="{Binding DataContext.ConditionJoiners, RelativeSource={RelativeSource AncestorType=Window}}" SelectedItem="{Binding Joiner}" Height="28"/>
                                    <ComboBox Grid.Column="1" ItemsSource="{Binding DataContext.AvailableVariables, RelativeSource={RelativeSource AncestorType=Window}}" SelectedItem="{Binding Variable}" Height="28" Margin="5,0,0,0"/>
                                    <ComboBox Grid.Column="2" ItemsSource="{Binding DataContext.Operators, RelativeSource={RelativeSource AncestorType=Window}}" SelectedItem="{Binding Operator}" Height="28" Margin="5,0,0,0"/>
                                    <TextBox Grid.Column="3" Text="{Binding Value}" Height="28" Padding="5" Margin="5,0,0,0" MinWidth="220"/>
                                    <Button Grid.Column="4" Content="Remove" Command="{Binding DataContext.RemoveConditionCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}" Margin="5,0,0,0" Height="28"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            <Button Content="+ Add Condition" Command="{Binding AddConditionCommand}" Width="150" Height="32" Margin="0,0,0,10" FontSize="12"/>

            <TextBlock Text="Condition Text (optional)" FontWeight="Bold" Margin="0,0,0,5" FontSize="12"/>
            <TextBox Text="{Binding ConditionText}" AcceptsReturn="True" Height="80" TextWrapping="Wrap" Padding="6" BorderBrush="#CCCCCC" BorderThickness="1"/>
        </StackPanel>

        <!-- Footer/Actions -->
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Vertical">
            <TextBlock Text="{Binding StatusMessage}" Foreground="Orange" Margin="0,0,0,10" TextWrapping="Wrap"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Save" Command="{Binding SaveCommand}" Width="100" Height="32" Margin="0,0,8,0" Background="#4CAF50" Foreground="White" FontWeight="Bold"/>
                <Button Content="Close" Width="90" Height="32" Margin="0,0,8,0" Click="Close_Click"/>
                <Button Content="Cancel" IsCancel="True" Width="90" Height="32"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
