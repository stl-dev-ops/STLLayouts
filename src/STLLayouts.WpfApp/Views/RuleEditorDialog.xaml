<Window x:Class="STLLayouts.WpfApp.Views.RuleEditorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        Title="Edit Rule" Height="500" Width="800" WindowStartupLocation="CenterOwner"
        Background="{DynamicResource AppBackgroundBrush}"
        Foreground="{DynamicResource AppForegroundBrush}">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Existing Rules Panel -->
        <GroupBox Grid.Row="0" Grid.RowSpan="3" Grid.Column="0" Header="Existing Rules" Margin="0,0,10,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <telerik:RadListBox Grid.Row="0" ItemsSource="{Binding ExistingRules}" SelectedItem="{Binding SelectedRule}">
                    <telerik:RadListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="4">
                                <TextBlock Text="{Binding RuleName}" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding Condition}" FontSize="10" TextTrimming="CharacterEllipsis"/>
                                <TextBlock Text="{Binding Priority, StringFormat=Priority: {0}}" FontSize="10"/>
                            </StackPanel>
                        </DataTemplate>
                    </telerik:RadListBox.ItemTemplate>
                </telerik:RadListBox>

                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8,0,0" HorizontalAlignment="Right">
                    <telerik:RadButton Content="Refresh" Command="{Binding RefreshRulesCommand}" Width="80" Height="28" Margin="0,0,8,0"/>
                    <telerik:RadButton Content="Delete" Command="{Binding DeleteRuleCommand}" Width="70" Height="28" Margin="0,0,8,0"/>
                    <telerik:RadButton Content="New" Command="{Binding NewRuleCommand}" Width="60" Height="28"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Rule Info Row -->
        <GroupBox Grid.Row="0" Grid.Column="1" Header="Rule" Margin="0,0,0,10">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Rule Name:" VerticalAlignment="Center" Width="100" FontWeight="Bold"/>
                    <TextBox Text="{Binding RuleName}" Width="250" Height="28"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Priority:" VerticalAlignment="Center" Width="100" FontWeight="Bold"/>
                    <TextBox Text="{Binding Priority}" Width="60" Height="28"/>
                    <CheckBox Content="Active" IsChecked="{Binding IsActive}" Margin="20,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Conditions Area -->
        <GroupBox Grid.Row="1" Grid.Column="1" Header="Conditions">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" MaxHeight="220" Margin="0,0,0,10">
                    <ItemsControl ItemsSource="{Binding Conditions}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,0,0,8" Padding="5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="90"/>
                                            <ColumnDefinition Width="200"/>
                                            <ColumnDefinition Width="140"/>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="90"/>
                                        </Grid.ColumnDefinitions>
                                        <telerik:RadComboBox Grid.Column="0" ItemsSource="{Binding DataContext.ConditionJoiners, RelativeSource={RelativeSource AncestorType=Window}}" SelectedItem="{Binding Joiner}" Height="28"/>
                                        <telerik:RadComboBox Grid.Column="1" ItemsSource="{Binding DataContext.AvailableVariables, RelativeSource={RelativeSource AncestorType=Window}}" SelectedItem="{Binding Variable}" Height="28" Margin="5,0,0,0"/>
                                        <telerik:RadComboBox Grid.Column="2" ItemsSource="{Binding DataContext.Operators, RelativeSource={RelativeSource AncestorType=Window}}" SelectedItem="{Binding Operator}" Height="28" Margin="5,0,0,0"/>
                                        <TextBox Grid.Column="3" Text="{Binding Value}" Height="28" Margin="5,0,0,0" MinWidth="220"/>
                                        <telerik:RadButton Grid.Column="4" Content="Remove" Command="{Binding DataContext.RemoveConditionCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}" Margin="5,0,0,0" Height="28"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <telerik:RadButton Grid.Row="1" Content="+ Add Condition" Command="{Binding AddConditionCommand}" Width="150" Height="32" Margin="0,0,0,10"/>

                <TextBlock Grid.Row="2" Text="Condition Text (optional)" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox Grid.Row="3" Text="{Binding ConditionText}" AcceptsReturn="True" Height="80" TextWrapping="Wrap" />
            </Grid>
        </GroupBox>

        <!-- Footer/Actions -->
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Vertical">
            <TextBlock Text="{Binding StatusMessage}" Margin="0,0,0,10" TextWrapping="Wrap"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <telerik:RadButton Content="Save" Command="{Binding SaveCommand}" Width="100" Height="32" Margin="0,0,8,0"/>
                <telerik:RadButton Content="Close" Width="90" Height="32" Margin="0,0,8,0" Click="Close_Click"/>
                <telerik:RadButton Content="Cancel" IsCancel="True" Width="90" Height="32"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
