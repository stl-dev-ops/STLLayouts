<Window x:Class="STLLayouts.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:STLLayouts.WpfApp"
        xmlns:views="clr-namespace:STLLayouts.WpfApp.Views"
        xmlns:viewmodels="clr-namespace:STLLayouts.WpfApp.ViewModels"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        mc:Ignorable="d"
        Style="{StaticResource AppChromedWindowStyle}"
        Title="STL Layouts - Document Generation System" 
        Height="700" Width="1200"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="{DynamicResource AppBackgroundBrush}"
        Foreground="{DynamicResource AppForegroundBrush}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Padding="15">
            <TextBlock Text="STL Layouts - Document Generation System"
                       FontSize="24"
                       FontWeight="Bold"/>
        </Border>

        <!-- Main Content -->
        <telerik:RadTabControl x:Name="MainTabs" Grid.Row="1" Margin="10">
            <telerik:RadTabItem Header="Job Selection &amp; Document Generation">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Search Panel -->
                    <GroupBox Header="Search Jobs" Grid.Row="0" Margin="5">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Job Number:" VerticalAlignment="Center" Margin="5"/>
                                <telerik:RadWatermarkTextBox Grid.Column="1" Text="{Binding JobNumber, UpdateSourceTrigger=PropertyChanged}" />

                                <TextBlock Grid.Column="2" Text="Customer:" VerticalAlignment="Center" Margin="5"/>
                                <telerik:RadWatermarkTextBox Grid.Column="3" Text="{Binding CustomerName, UpdateSourceTrigger=PropertyChanged}" />

                                <telerik:RadButton Grid.Column="4" Content="Search" Command="{Binding SearchCommand}" Margin="5"/>
                            </Grid>
                        </StackPanel>
                    </GroupBox>

                    <!-- Jobs Grid -->
                    <GroupBox Header="Jobs" Grid.Row="1" Margin="5">
                        <telerik:RadGridView ItemsSource="{Binding Jobs}"
                                             SelectedItem="{Binding SelectedJob}"
                                             AutoGenerateColumns="False"
                                             IsReadOnly="True"
                                             SelectionMode="Single"
                                             ShowGroupPanel="False">
                            <telerik:RadGridView.Columns>
                                <telerik:GridViewDataColumn Header="Job Number" DataMemberBinding="{Binding JobNumber}" Width="150"/>
                                <telerik:GridViewDataColumn Header="Product" DataMemberBinding="{Binding ProductDescription}" Width="*"/>
                                <telerik:GridViewDataColumn Header="Customer" DataMemberBinding="{Binding CustomerName}" Width="200"/>
                                <telerik:GridViewDataColumn Header="Status" DataMemberBinding="{Binding JobStatus}" Width="100"/>
                                <telerik:GridViewDataColumn Header="Created" DataMemberBinding="{Binding CreatedDate, StringFormat=yyyy-MM-dd}" Width="100"/>
                            </telerik:RadGridView.Columns>
                        </telerik:RadGridView>
                    </GroupBox>

                    <!-- Actions Panel -->
                    <GroupBox Header="Actions" Grid.Row="2" Margin="5">
                        <StackPanel Orientation="Horizontal">
                            <telerik:RadButton Content="Generate Document" Command="{Binding GenerateDocumentCommand}" />
                            <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center" Margin="20,0,0,0" FontWeight="Bold"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Suggested Templates -->
                    <GroupBox Header="Suggested Templates" Grid.Row="3" Margin="5">
                        <telerik:RadGridView ItemsSource="{Binding SuggestedTemplates}"
                                             AutoGenerateColumns="False"
                                             IsReadOnly="True"
                                             SelectionMode="Single"
                                             ShowGroupPanel="False">
                            <telerik:RadGridView.Columns>
                                <telerik:GridViewDataColumn Header="Template Name" DataMemberBinding="{Binding TemplateName}" Width="*"/>
                                <telerik:GridViewDataColumn Header="Category" DataMemberBinding="{Binding Category}" Width="150"/>
                                <telerik:GridViewDataColumn Header="Version" DataMemberBinding="{Binding CurrentVersion}" Width="80"/>
                                <telerik:GridViewCheckBoxColumn Header="Active" DataMemberBinding="{Binding IsActive}" Width="80"/>
                            </telerik:RadGridView.Columns>
                        </telerik:RadGridView>
                    </GroupBox>
                </Grid>
            </telerik:RadTabItem>

            <telerik:RadTabItem x:Name="TemplateTab" Header="Templates" />
            <telerik:RadTabItem x:Name="VariableMappingsTab" Header="Variable Mappings" />
            <telerik:RadTabItem x:Name="DocumentPreviewTab" Header="Document Preview" />
            <telerik:RadTabItem x:Name="SettingsTab" Header="Settings" />
        </telerik:RadTabControl>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
